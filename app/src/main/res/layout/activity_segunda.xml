<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundaActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="17dp"
        android:text="Digite su fruta favorita" />

    <AutoCompleteTextView
        android:layout_marginTop="10dp"
        android:id="@+id/fruta"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:hint="Manzana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="17dp"
        android:text="Digite su animal favorito"
        android:layout_gravity="center"/>

    <AutoCompleteTextView
        android:layout_marginTop="10dp"
        android:id="@+id/animal"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:hint="Gatito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:text="Digite su lenguaje de programaciÃ³n favorito" />

    <AutoCompleteTextView
        android:layout_marginTop="10dp"
        android:id="@+id/lenProg"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:hint="C#"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/Barra"
        android:progress="0"
        android:max="100"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textPorcentaje"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/btnProcesar"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Pocesar"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5">
            <Button
                android:layout_width="fill_parent"
                android:id="@+id/btnDatos"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="Datos"/>

        </RelativeLayout>



    </LinearLayout>



</LinearLayout>